@model DomainSite.ViewModels.ArticleJumbotronVM

<div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
        <h1 class="font-italic">@Model.Title</h1>
        <p class="lead">@Model.SubTitle</p>
        <p class="blog-post-meta">Published @Model.PublishDate.ToString("MMMM dd yyyy")</p>
    </div>
</div>